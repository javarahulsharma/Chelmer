<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ScreenEightB"> <!-- usually the name of the Java file associated with this activity -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        tools:context="app.android.SignInActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/banner"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp"
            android:background="@drawable/mint" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:text="CURRENT AND RECOMMENDED INVESTOP PROFILE"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/imageView2"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="24dp"
            android:background="@color/whiteback"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="2dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingStart="8dp"
                        android:textAlignment="center"
                        android:paddingEnd="8dp"
                        android:layout_margin="32dp"
                        android:text="Based on your responses, your Investor Profile is considered to be:" />



                <Button
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background"
                    android:text="Moderate"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingStart="8dp"
                    android:textAlignment="center"
                    android:layout_margin="32dp"
                    android:paddingEnd="8dp"
                    android:text="Recommended investment funds and products:" />



                <Button
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background"
                    android:text="Balanced funds"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Back"
                        android:id="@+id/backBtn"
                        android:textColor="#9B9B9B"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:background="@drawable/back_btn_two"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:textSize="12dp">
                    </Button>
                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>